extends layout/layout

block vars
  -bodyClass='home-page' 

block container
  nav.nav 
    .container.nav-container
      +navigation({list: navigation, dropdowns: dropDownList})
  section.cart-page 
    .container
      .cart-page__breadcrumb
        +breadcrumb({title: 'Trang chủ', desc: ['Sản phẩm', 'Giỏ hàng']})
      .breadcrumb__heading
        +formHeading('Giỏ hàng')
      .cart__content
        .cart__table
          table
            thead
              tr
                th Ảnh
                th Tên sản phẩm
                th Giá
                th Số lượng
                th Tổng số
                th Xoá
            tbody
              +cartList(carts)
        .cart__btn
          a.btn.btn-active(href="#") Tiếp tục mua hàng
          a.btn.btn-active(href="#")  Xoá
          a.btn.btn-active(href="#")  Cập nhập
  section.sponsor-section 
    .container 
      .sponsor__img
        a(href="#")
          img(src="../../images/brand-1.png", alt="abc")
        a(href="#")
          img(src="../../images/brand-2.png", alt="abc")
        a(href="#")
          img(src="../../images/brand-3.png", alt="abc")
